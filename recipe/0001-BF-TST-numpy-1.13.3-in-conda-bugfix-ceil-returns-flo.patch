Subject: [PATCH] BF(TST): numpy 1.13.3 (in conda) bugfix -- ceil returns
 float, needs int before giving as size

---
 mvpa2/tests/test_surfing_surface.py | 2 +-
 1 file changed, 1 insertion(+), 1 deletion(-)

diff --git a/mvpa2/tests/test_surfing_surface.py b/mvpa2/tests/test_surfing_surface.py
index 3b00355f..69373811 100644
--- a/mvpa2/tests/test_surfing_surface.py
+++ b/mvpa2/tests/test_surfing_surface.py
@@ -138,7 +138,7 @@ class SurfingSurfaceTests(unittest.TestCase):
     @staticmethod
     def set_nan_to_surface_vertices(s, nan_ratio=.05):
         # make some vertices NaN (as might be the case for flat surfaces)
-        nan_count = np.ceil(s.nvertices * nan_ratio)
+        nan_count = int(np.ceil(s.nvertices * nan_ratio))
         nan_vertices_ids = np.random.random_integers(s.nvertices,
                                                      size=(nan_count,)) - 1
         vertices_noisy = s.vertices + 0.
